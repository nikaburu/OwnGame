<UserControl x:Class="OwnGame.Views.QuestionProcessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Converters="clr-namespace:OwnGame.Converters" mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800"
             DataContext="{Binding QuestionProcess, Source={StaticResource Locator}}">
    <UserControl.Resources>
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0.1*"/>
    		<ColumnDefinition Width="0.8*"/>
    		<ColumnDefinition Width="0.1*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="34"/>
            <RowDefinition Height="214*" />
            <RowDefinition Height="552*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="0,8,8,0" d:LayoutOverrides="VerticalAlignment" Grid.ColumnSpan="3">
            <Button Content="Отмена выбора вопроса" DockPanel.Dock="Left" Width="Auto" Command="{Binding UnLoadQuestionCommand}" />
            <Button Content="Раскрыть ответ" Width="Auto" DockPanel.Dock="Right" HorizontalAlignment="Right" Command="{Binding MakeAnsweredCommand}" />
        </DockPanel>
        <TextBlock Text="{Binding Model.Text}" FontSize="24" FontWeight="Bold" TextAlignment="Center" TextWrapping="WrapWithOverflow" Foreground="#FFB14709" Grid.Column="1" Grid.Row="1" />
        <UniformGrid Grid.Row="2" Grid.Column="1" Columns="1" Visibility="{Binding IsAnswered, Converter={StaticResource ResourceKey=BoolToVisibilityConverter}}">
            <Border BorderBrush="#FFDE8282" BorderThickness="3">
                <TextBlock Text="{Binding Model.Answer}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26.667" FontWeight="Bold" Foreground="#FFED2E2E" />
            </Border>
            <ItemsControl ItemsSource="{Binding CommandResults.CommandResults, Source={StaticResource Locator}}" FontSize="16">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,0,10,0">
                        	<TextBlock Text="{Binding Name}" FontSize="13.333" FontWeight="Bold" />
                            <Button Margin="0,5,0,5" Content="+" 
                                    Command="{Binding AddScoreCommand}"
                                    CommandParameter="{Binding DataContext.Model.Cost, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UniformGrid}}"/>
                            <Button Content="-"
                                    Command="{Binding SubstractScoreCommand}"
                                    CommandParameter="{Binding DataContext.Model.Cost, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UniformGrid}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </UniformGrid>
    </Grid>
</UserControl>
