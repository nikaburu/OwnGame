<UserControl x:Class="OwnGame.Views.TotalResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Converters="clr-namespace:OwnGame.Converters" mc:Ignorable="d" DataContext="{Binding TotalResults, Source={StaticResource Locator}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Converters:BoolToVisibilityInvertedConverter x:Key="BoolToVisibilityInvertedConverter" />
    </UserControl.Resources>
    <Grid>
        <Button Content="Следующий раунд" Command="{Binding NextRoundCommand}" Visibility="{Binding IsGameEnded, Converter={StaticResource BoolToVisibilityInvertedConverter}}"/>
    </Grid>
</UserControl>
