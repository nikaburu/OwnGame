<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic" x:Class="OwnGame.GamePreloader"        
        Title="Настройка новой игры" Height="480" Width="600">
	<Window.Background>
		<ImageBrush ImageSource="Resources/svoja_igra.jpg" Opacity="0.15"/>
	</Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="218*" />
            <RowDefinition Height="43*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135*" />
            <ColumnDefinition Width="143*" />
        </Grid.ColumnDefinitions>
        <Button Command="{Binding StartGameCommand}" Grid.Row="1" HorizontalAlignment="Right" Width="278" Grid.ColumnSpan="2" Content="Начать игру" Margin="5,10,5,5" Style="{DynamicResource BlueButtonStyle}" />
        <StackPanel Grid.Column="1" Margin="0,40,0,0">
        	<TextBlock Height="40" TextWrapping="Wrap" Text="Количество комманд:" FontSize="24" FontWeight="Bold" Margin="10,0" Foreground="White"/>
            <TextBox Height="40" TextWrapping="Wrap" Text="{Binding CommandsCount, UpdateSourceTrigger=PropertyChanged}" Margin="40,0" FontSize="24" TextAlignment="Center" Style="{DynamicResource BlueTextBoxStyle}" FontWeight="Bold" />
        	<Slider Style="{DynamicResource BlueSliderStyle}" IsSnapToTickEnabled="True" Margin="40,0" Minimum="1" SmallChange="1" Value="{Binding CommandsCount}" AutoToolTipPlacement="BottomRight" TickPlacement="TopLeft" />
        </StackPanel>
    </Grid>
</Window>
