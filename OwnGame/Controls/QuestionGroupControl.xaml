<UserControl x:Class="OwnGame.Controls.QuestionGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ItemsControl ItemsSource="{Binding}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid DataContext="{Binding}" Height="68.3733333333333">
                    <TextBlock Text="{Binding Name}" Margin="20,20,0,19.999" FontSize="21.333" Foreground="#FFF3F3DF" FontWeight="Bold" HorizontalAlignment="Left" d:LayoutOverrides="Height" />
                    <ItemsControl ItemsSource="{Binding Questions}" Foreground="#FF191B7C" Margin="182.236,10.373,0,7.999" d:LayoutOverrides="Height">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="50" Height="50" Cursor="Hand">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FF4DE523" Offset="0.918"/>
                                            <GradientStop Color="#00E5F1CA" Offset="1"/>
                                            <GradientStop Color="#FFA8D89B"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock x:Name="questionCostTextBlock" Text="{Binding Cost}" RenderTransformOrigin="0.5,0.5" 
                							FontSize="21.333" FontWeight="Bold" 
                							ToolTip="{Binding Text, ElementName=questionCostTextBlock}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
